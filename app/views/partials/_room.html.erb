<%# local : room %>
<div class="post">
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <a href="/rooms/<%= room.id %>">
        <div class="card-image-bg" style="background-image:url('<%= room.representative %>');"></div>
      </a>
    </div>
    <div class="card-content">
      <span class="card-title grey-text text-darken-4">
        <i class="activator material-icons right">add</i>
        <a href="/rooms/<%= room.id %>">
          <span><%= room.in_date.strftime("%Y.%m.%d") %> ~ <%= room.out_date.strftime("%Y.%m.%d") %></span><br/>
          <span><%= location_str(room) %> </span>
        </a>
      </span>
    </div>
    <div class="card-action">
      <span>월 <%= room.monthly_pay%>만원<%= room.admin_pay > 0? " (관리비 #{room.admin_pay}만원)" : " (관리비 포함)" %></span>
      <a class="btn btn-primary waves-effect round" href="/rooms/<%= room.id %>">상세정보</a>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">
        <i class="material-icons right">close</i>
        <%= simple_format("
          월세 : #{room.monthly_pay} 만원
          관리비 : #{room.admin_pay} 만원
          보험금 : #{room.insurance_pay} 만원
        ", style: "margin:0px;")%>
      </span>
    </div>
  </div>
</div>