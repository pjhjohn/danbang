<% if @room.nil? %>
<%= render :partial => "partials/room_not_exist" %>
<% elsif @room.deleted %>
<%= render :partial => "partials/room_deleted" %>
<% else %>
<div class="container">
  <br><br><br><br>
  <div class="row">
    <div class="col l6 offset-l3 m12">
      <div class="row">
        <center>
          <h3>계약이 성사 되었나요?</h3>
        </center>
      </div>
      <br><br>
      <div class="row">
        <a href="/rooms/delete/<%= @room.id %>" class="btn red lighten-2 col m5 s12" style="margin-bottom:20px;">성사되지 않았습니다</a>
        <a href="/rooms/complete/<%= @room.id %>" class="btn blue lighten-2 col offset-m2 m5 s12" style="margin-bottom:20px;">성사되었습니다</a>
      </div>
      <div class="row">
        <%= link_to '돌아가기', "#", onclick: "window.history.back(); return false;", class: "btn col s12" %>
      </div>
    </div>
  </div>
</div>
<style>
  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }
  main {
    flex: 1 0 auto;
  }
</style>
<% end %>